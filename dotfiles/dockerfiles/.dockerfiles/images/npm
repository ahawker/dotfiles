#!/usr/bin/env sh
#
# Shell functions and aliases for using the "npm" dockerfiles image.

# Versions
DOCKERFILES_NPM_NODEJS_8_11_3_VERSION="8.11.3"
DOCKERFILES_NPM_NODEJS_8_11_VERSION="$DOCKERFILES_NPM_NODEJS_8_11_3_VERSION"
DOCKERFILES_NPM_NODEJS_8_VERSION="$DOCKERFILES_NPM_NODEJS_8_11_VERSION"
export DOCKERFILES_NPM_NODEJS_LATEST_VERSION="$DOCKERFILES_NPM_NODEJS_8_VERSION"

# shellcheck disable=2039
declare -a VERSIONS=($DOCKERFILES_NPM_NODEJS_8_11_3_VERSION)
export DOCKERFILES_NPM_NODEJS_VERSIONS="$VERSIONS"

npm() {
	_set_docker_run_image nodejs "${IMAGE_VERSION:-$DOCKERFILES_NPM_NODEJS_LATEST_VERSION}" "${IMAGE_TAG:-""}"
	_set_docker_run_args npm "$@"

	docker run \
		--interactive \
		--tty \
		--rm \
		--env-file "$DOCKERFILES_ENV_FILE" \
		--volume "$(pwd):$DOCKERFILES_WORKDIR" \
		--workdir "$DOCKERFILES_WORKDIR" \
		$DOCKER_RUN_IMAGE $DOCKER_RUN_ARGS
}

_set_aliases_for_image npm "$VERSIONS[@]"

unset DOCKERFILES_NPM_NODEJS_8_11_3_VERSION
unset DOCKERFILES_NPM_NODEJS_8_11_VERSION
unset DOCKERFILES_NPM_NODEJS_8_VERSION
unset VERSIONS
