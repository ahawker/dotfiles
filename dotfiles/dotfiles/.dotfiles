#!/usr/bin/env sh
#
# Script to be sourced by shell specific .rc files.
#
# The goal of this file is to be central "entrypoint" for all dotfiles
# repository context instead of duplicating it across .rc files, e.g. .bashrc/.zshrc.

# Source path, alias, and eval files.
# shellcheck disable=2044
for f in $(find "$HOME/dotfiles" -type f -name 'path' 2> /dev/null); do . "$f"; done
for f in $(find "$HOME/dotfiles" -type f -name 'alias' 2> /dev/null); do . "$f"; done
for f in $(find "$HOME/dotfiles" -type f -name 'eval' 2> /dev/null); do . "$f"; done
